<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:fitsSystemWindows="true">
    <Button
        android:id="@+id/btn_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入5.0特效"
        android:background="@drawable/bg_login"/>
    <Button
        android:id="@+id/btn_recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView的使用"
        android:background="@drawable/bg_ripple"/>
    <Button
        android:id="@+id/btn_databind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="DataBinding测试"/>
    <Button
        android:id="@+id/btn_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="自定义Behavior"/>
</LinearLayout>
